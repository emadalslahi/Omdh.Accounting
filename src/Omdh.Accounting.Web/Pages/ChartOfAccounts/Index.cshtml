@page
@using Omdh.Accounting.Localization
@using Omdh.Accounting.Web.Pages.ChartOfAccounts
@using Microsoft.Extensions.Localization
@model IndexModel
@inject IStringLocalizer<AccountingResource> L
@section scripts
{
    <abp-script src="/Pages/ChartOfAccounts/Index.js" />
}
<abp-card>
    <abp-card-header>
        <abp-row>
            <abp-column size-md="_6">
                <abp-card-title>@L["ChartOfAccounts"]</abp-card-title>
            </abp-column>
            <abp-column size-md="_6" class="text-end">
                <abp-button id="NewChartOfAccount"
                            text="@L["New Account"].Value"
                            icon="plus"
                            button-type="Primary"/>
            </abp-column>
        </abp-row>
    </abp-card-header>
    <abp-card-body>
        <abp-table striped-rows="true" id="ChartOfAccountsTable"></abp-table>
    </abp-card-body>
</abp-card>